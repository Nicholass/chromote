{
    "name": "Tab commander",
    "description": "Utility for working with tabs and provide an API to them via Chromote server",
    "version": "0.1",
    "permissions": ["tabs", "storage"],
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "show tab controlls",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
